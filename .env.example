# CarePlan AI Environment Configuration

# Application Settings
APP_NAME="CarePlan AI"
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Claude API Configuration (Alternative LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/careplan_db

# EHR Integration
EHR_API_URL=http://localhost:8080
EHR_API_KEY=your_ehr_api_key_here

# Vector Store Configuration
VECTOR_STORE_PATH=/app/data/vector_store
VECTOR_DIMENSION=1536

# Logging Configuration
LOG_LEVEL=INFO

# Security (for production)
SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# External Services
REDIS_URL=redis://localhost:6379/0

# AWS Configuration (for Terraform deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
